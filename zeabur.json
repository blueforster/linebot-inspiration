{
  "build": {
    "commands": [
      "pip install --upgrade pip",
      "pip install -r requirements.txt"
    ]
  },
  "start": {
    "command": "gunicorn wsgi:app --bind 0.0.0.0:$PORT --workers 2 --timeout 120 --access-logfile - --error-logfile -"
  },
  "env": {
    "PYTHON_VERSION": "3.11"
  },
  "healthcheck": {
    "path": "/health",
    "timeout": 30
  },
  "regions": ["sin1"],
  "plans": ["pro"]
}